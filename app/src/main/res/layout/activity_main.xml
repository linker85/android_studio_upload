<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.linke_000.myapplication.MainActivity">
    <EditText
        android:id="@+id/a_main_edit_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
    <EditText
        android:id="@+id/a_main_edit_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>
    <Button
        android:id="@+id/sub_btn"
        android:layout_below="@id/a_main_edit_txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sum"
        android:onClick="sum"/>
    <TextView
        android:id="@+id/a_answer_txt"
        android:layout_below="@id/sub_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result" />

    <TextView
        android:id="@+id/a_main_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <TextView
        android:id="@+id/a_mai0n_txt"
        android:layout_below="@id/a_main_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="other" />
    <Button
        android:id="@+id/button1"
        android:layout_below="@id/a_mai0n_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button - Go to mkyong.com"
        android:onClick="do_something"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottom"
        android:orientation="horizontal"
        android:layout_below="@id/button1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/button1b"
            android:layout_below="@id/a_mai0n_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:text="Button1"
            android:onClick="clickButton1"/>
        <Button
            android:id="@+id/button2b"
            android:layout_below="@id/button1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Button"
            android:onClick="clickButton2" />
    </LinearLayout>


</LinearLayout>
